<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgrect"
    tools:context="com.example.arrafiapplication.KerusakanPerangkatLab" >
	
     <FrameLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@drawable/bgrect" >

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bgrect"
        android:gravity="end"
        android:padding="16dp" >

        <customfonts.MyTextView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout1"
            android:layout_below="@+id/wolf"
            android:gravity="center"
            android:text="Daftar Kerusakan Perangkat"
            android:textColor="@color/colortext"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/linearLayoutRusakLab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:orientation="vertical" >
            
            <LinearLayout
        android:id="@+id/linearLayoutRusakLab1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText1"
        android:layout_below="@+id/editText1"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >
        
                <customfonts.MyTextView
            android:id="@+id/namaAlAbRSK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/head"
            android:layout_below="@+id/head"
            android:gravity="center"
            android:text="nama"
            android:layout_marginTop="0dp"
            android:textColor="@color/colortext"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="70dp"
            android:layout_height="1dp"
            android:background="@color/colortext"/>
    </LinearLayout>

            <ListView
        android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:dividerHeight="2dp"
         android:divider="@drawable/rect"
         android:layout_marginLeft="0dp"
         android:layout_marginRight="0dp"
        android:id="@+id/listKerusakanPerLab" />
          
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
